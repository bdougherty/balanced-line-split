{
  "name": "balanced-line-split",
  "version": "2.0.0",
  "description": "Split a string into multiple lines of similar lengths.",
  "license": "MIT",
  "repository": "bdougherty/balanced-line-split",
  "homepage": "https://github.com/bdougherty/balanced-line-split#readme",
  "bugs": {
    "url": "https://github.com/bdougherty/balanced-line-split/issues"
  },
  "author": {
    "name": "Brad Dougherty",
    "email": "me@brad.is"
  },
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "files": [
    "index.js"
  ],
  "dependencies": {
    "string-width": "^5.0.0",
    "strip-ansi": "^7.0.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "xo": "^0.44.0"
  },
  "xo": {
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "capitalized-comments": "off",
      "comma-dangle": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  }
}
